{
  "include": [
    "tests/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "paths": {
      "@/*": ["./src/*"]
    },
    "isolatedModules": false,
    "moduleResolution": "NodeNext"
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
